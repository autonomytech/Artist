<p id="notice"><%= notice %></p>

<h1>Listing Client Histories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile no</th>
      <th>Payment status</th>
      <th>Painting</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_histories.each do |client_history| %>
      <tr>
        <td><%= client_history.name %></td>
        <td><%= client_history.email %></td>
        <td><%= client_history.mobile_no %></td>
        <td><%= client_history.payment_status %></td>
        <td><%= client_history.painting %></td>
        <td><%= link_to 'Show', client_history %></td>
        <td><%= link_to 'Edit', edit_client_history_path(client_history) %></td>
        <td><%= link_to 'Destroy', client_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

