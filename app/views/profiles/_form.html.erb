<%= bootstrap_form_for(@profile) do |f| %>
<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-md-5">
        <%= f.text_field :first_name, placeholder: 'First Name' %>
        <%= f.text_field :middle_name, placeholder: 'Middle Name' %>
        <%= f.text_field :last_name, placeholder: 'Last Name' %>
        <%= f.text_field :email, placeholder: 'Email' %>
        <%= f.text_field :mobile_no, placeholder: 'Mobile Number' %>
        <%= f.text_area :address, placeholder: 'Address' %>
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
      <div class="col-md-6">
        <h4>Preview image</h4>
        <div class="img-crop">
          <%= image_tag (@profile.image? ? @profile.image : 'p3.jpg') %>
        </div><br/>
        <div class="btn-group">
          <label title="Upload image file" for="inputImage" class="btn btn-info">
          <%= f.file_field :image, class: 'input_image', label: 'Upload new image'%>
          </label>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>