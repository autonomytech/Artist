<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Profile</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Dashboard', dashboard_index_path %>
      </li>
      <li>
        <%= link_to 'Profile', profiles_path %>
      </li>
      <li class="active">
        <strong><%= @profile.full_name %></strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInUp">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <div class="row">
        <div class="col-lg-12">
          <div class="m-b-md">
            <h5>Profile - <%= @profile.full_name %></h5>
            <div class="ibox-tools">
              <a class="dropdown-toggle btn btn-xs btn-white" data-toggle="dropdown" href="#">
                Action <i class="caret"></i>
              </a>
              <ul class="dropdown-menu dropdown-user">
                <li>
                  <%= link_to 'Edit', edit_profile_path(@profile) %>
                </li>
                <li>
                  <%= link_to 'Delete', @profile, method: :delete, data:{ confirm: "Are you sure? "} %>
                </li>
                <li>
                  <%= link_to 'Add qualification', '#', {onclick: "qualification();"} %>
                </li>
                <li>
                  <%= link_to 'Add achievement', '#', {onclick: "achievement();"} %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="ibox-content">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-md-6">
              <div class="image-crop">
                <%= image_tag @profile.image %>
              </div>
              <hr/>
              <label title="Donload image" id="download" class="btn btn-primary">Download</label>
              <div class="btn-group">
                <button class="btn btn-white" id="zoomIn" type="button">Zoom In</button>
                <button class="btn btn-white" id="zoomOut" type="button">Zoom Out</button>
                <button class="btn btn-white" id="rotateLeft" type="button">Rotate Left</button>
                <button class="btn btn-white" id="rotateRight" type="button">Rotate Right</button>
              </div>
            </div>
            <div class="col-lg-4">
              <dl class="dl-horizontal">
                <dt>First Name:</dt>
                <dd><%= @profile.first_name %></dd>
                <dt>Middle Name:</dt>
                <dd><%= @profile.middle_name %></dd>
                <dt>Last Name:</dt>
                <dd><%= @profile.last_name %></dd>
                <dt>Email:</dt>
                <dd><%= @profile.email %></dd>
                <dt>Mobile Number:</dt>
                <dd><%= @profile.mobile_no %></dd>
                <dt>Address:</dt>
                <dd><%= @profile.address %></dd>
              </dl>
              <hr/>
              <div class="sub-form"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="ibox float-e-margins">
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox-title">
          <h5>Qualifications</h5>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Qualification</th>
                <th>College name</th>
                <th>University</th>
                <th>Year</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @qualifications.each do |qualification|%>
              <%=render 'qualifications/qualification', qualification: qualification, profile: @profile %>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="ibox float-e-margins">
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox-title">
          <h5>Achievements</h5>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Details</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @achievements.each do |achievement|%>
              <%=render 'achievements/achievement', achievement: achievement, profile: @profile %>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  function qualification(){
    $('.sub-form').html("<%= j render '/qualifications/form' %>");
  }
  function achievement(){
    $('.sub-form').html("<%= j render '/achievements/form' %>");
  }
</script>