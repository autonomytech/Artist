<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Profile</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Dashboard', dashboard_index_path %>
      </li>
      <li>
        <%= link_to 'Profile', profiles_path %>
      </li>
      <li class="active">
        <strong><%= @profile.full_name %></strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInUp">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <div class="row">
        <div class="col-lg-12">
          <div class="m-b-md">
            <h5>Profile - <%= @profile.full_name %></h5>
            <div class="ibox-tools">
              <a class="dropdown-toggle btn btn-xs btn-white" data-toggle="dropdown" href="#">
                Action <i class="caret"></i>
              </a>
              <ul class="dropdown-menu dropdown-user">
                <li>
                  <%= link_to 'Edit', edit_profile_path(@profile) %>
                </li>
                <li>
                  <%= link_to 'Delete', @profile, method: :delete, data:{ confirm: "Are you sure? "} %>
                </li>
                <li>
                  <%= link_to 'Add qualification', '#', {onclick: "qualification();"} %>
                </li>
                <li>
                  <%= link_to 'Add achievement', '#', {onclick: "achievement();"} %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="ibox-content">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-md-6">
            <%= image_tag @profile.image, width: 500 %>
            </div>
            <div class="col-lg-6">
              <table class="table">
                <tr>
                  <th>First Name</th>
                  <td><%= @profile.first_name %></td>
                </tr>
                <tr>
                  <th>Middle Name</th>
                  <td><%= @profile.middle_name %></td>
                </tr>
                <tr>
                  <th>Last Name</th>
                  <td><%= @profile.last_name %></td>
                </tr>
                <tr>
                  <th>Email</th>
                  <td><%= @profile.email %></td>
                </tr>
                <tr>
                  <th>Mobile. No.</th>
                  <td><%= @profile.mobile_no %></td>
                </tr>
                <tr>
                  <th>Address</th>
                  <td><%= @profile.address %></td>
                </tr>
              </table>
              <hr/>
              <div class="sub-form"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="ibox float-e-margins">
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox-title">
          <h5>Qualifications</h5>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Qualification</th>
                <th>College name</th>
                <th>University</th>
                <th>Year</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @qualifications.each do |qualification|%>
              <%=render 'qualifications/qualification', qualification: qualification, profile: @profile %>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="ibox float-e-margins">
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox-title">
          <h5>Achievements</h5>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Details</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @achievements.each do |achievement|%>
              <%=render 'achievements/achievement', achievement: achievement, profile: @profile %>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  function qualification(){
    $('.sub-form').html("<%= j render '/qualifications/form' %>");
  }
  function achievement(){
    $('.sub-form').html("<%= j render '/achievements/form' %>");
  }
</script>