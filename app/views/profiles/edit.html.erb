<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Profile</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Dashboard', dashboard_index_path %>
      </li>
      <li>
      	<%= link_to 'Profile', profiles_path %>
      </li>
      <li class="active">
        <strong>Edit</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Edit Profile <%= @profile.full_name %></h5>
        </div>
        <div class="ibox-content">
          <%= render 'form' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Qualification</h5>
          <div class="ibox-tools">
            <%= link_to new_profile_qualification_path(@profile), class: 'btn btn-primary btn-xs', remote: true do %><i class="fa fa-plus"></i><% end %>
          </div>
        </div>
        <div class="ibox-content">
          <div class="qua-form"></div>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Qualification</th>
                <th>College Name</th>
                <th>University</th>
                <th>Year</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody class="profiles">
              <%= render 'qualifications/qualification'%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Achievements</h5>
          <div class="ibox-tools">
            <%= link_to new_profile_achievement_path(@profile), class: 'btn btn-primary btn-xs', remote: true do %><i class="fa fa-plus"></i><% end %>
          </div>
        </div>
        <div class="ibox-content">
          <div class="ach-form"></div>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Achievement</th>
                <th>Date</th>
                <th>Details</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody class="prof">
              <%= render 'achievements/achievement'%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>