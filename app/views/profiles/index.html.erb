<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Profile</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Dashboard', dashboard_index_path %>
      </li>
      <li class="active">
        <strong>Profile</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Listing Profiles</h5>
          <div class="ibox-tools">
            <%= link_to new_profile_path, class: 'btn btn-primary btn-xs' do %><i class="fa fa-plus"></i><% end %>
          </div>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <%= profies_count %>
                <% @profiles.each do |profile| %>
                <td>
                  <%= link_to edit_profile_path(profile) do %>
                  <div>
                    <%= image_tag profile.image, class: "img-circle circle-border m-b-md", alt: "profile"%>
                  </div>
                  <div>
                    <h2 class="font-bold no-margins">
                      <%= profile.full_name %>
                    </h2>
                    <span><%= profile.email %></span><br/>
                    <span><%= profile.mobile_no %></span><br/>
                    <span><%= profile.address %></span>
                  </div>
                  <% end %>
                </td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>