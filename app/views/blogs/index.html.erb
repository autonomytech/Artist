<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Blog</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Dashboard', dashboard_index_path %>
      </li>
      <li class="active">
        <strong>Blog</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInUp">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Listing Blogs</h5>
          <div class="ibox-tools">
            <%= link_to new_blog_path, class: 'btn btn-primary btn-xs' do %><i class="fa fa-plus"></i><% end %>
          </div>
        </div>
        <div class="ibox-content">
          <table class="table table-hover">
            <thead>
              <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @blogs.each do |blog| %>
              <tr>
                <td>
                  <div class="ibox-tools pull-left">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Action <i class="fa fa-angle-right"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                      <li>
                        <%= link_to 'Edit', edit_blog_path(blog) %>
                      </li>
                      <li>
                        <%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
                      </li>
                    </ul>
                  </div>
                </td>
                <td>
                  <%= link_to blog_path(blog) do %>
                  <div class="project-title">
                    <h4><%= blog.title%></h4>
                    <%= blog.created_at.strftime('%d, %B %Y') %><br/>
                    Posted by: <%= blog.profile.full_name %><br/>
                  </div>
                  <%end%>
                  <%= blog.limited_content %><br/><%= link_to 'Read more', blog_path(blog) %>
                </td>
                <td>
                  <%= link_to blog_path(blog) do %>
                  <div class="file-box">
                    <div class="file">
                      <div class="image">
                        <%= image_tag blog.image, alt: "image", class: "img-responsive"%>
                      </div>
                    </div>
                  </div>
                  <%end%>
                </td>
                <td class="project-status">
                  <span class="label label-primary label-blog"><i class="fa fa-thumbs-up"></i> <%= blog.like %></span>
                  <span class="label label-danger label-blog"><i class="fa fa-thumbs-down"></i> <%= blog.like %></span>
                  <span class="label label-info label-blog"><i class="fa fa-comments"></i> <%= blog.comments.count %></span>
                </td>
              </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>