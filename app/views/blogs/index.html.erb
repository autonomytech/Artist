<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Blog</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Dashboard', dashboard_index_path %>
      </li>
      <li class="active">
        <strong>Blog</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInUp">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Listing Blogs</h5>
        </div>
        <div class="ibox-content">
          <div class="">
            <%= link_to 'New Blog', new_blog_path, class: 'btn btn-primary' %>
          </div>
          <table class="table table-hover">
            <thead>
              <tr>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @blogs.each do |blog| %>
                <tr>
                  <td class="project-status">
                    <span class="label label-primary label-blog"><i class="fa fa-thumbs-up"></i> <%= blog.like %></span><br/><br/>
                    <span class="label label-danger label-blog"><i class="fa fa-thumbs-down"></i> <%= blog.like %></span><br/><br/>
                    <span class="label label-info label-blog"><i class="fa fa-comments"></i> <%= blog.comments.count %></span>
                  </td>
                  <td class="project-title">
                    <%= link_to blog.title, blog_path(blog) %>
                    <br/>Created: <%= blog.created_at.to_date %>
                    <br/><%= blog.content %>
                  </td>
                  <td>
                    <div class="file-box">
                      <div class="file">
                        <div class="image">
                          <%= image_tag blog.image, alt: "image", class: "img-responsive"%>
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>