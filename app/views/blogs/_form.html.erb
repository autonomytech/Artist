<div class="row">
	<%= bootstrap_form_for(@blog) do |f| %>
	<div class="col-md-5">
		<%= f.select :profile_id, @profiles, {prompt: true}, {required: true} %>
		<%= f.text_field :title, placeholder: 'title' %>
		<%= f.text_area :content, placeholder: 'content', class: 'ckeditor' %> 
		<%= f.submit 'Save', class: 'btn btn-primary' %>
	</div>
	<div class="col-md-6">
		<%= f.file_field :image, class: 'input_image btn btn-info', label: 'Upload new image'%>
		<div class="img-crop">
			<%= image_tag (@blog.image? ? @blog.image : ''), width: 600 %>
		</div>
	</div>
	<% end %>
</div>