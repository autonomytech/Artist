<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @blog.content %>
</p>

<p>
  <strong>Image:</strong>
  <%= @blog.image_file_name %>
</p>

<p>
  <strong>Like:</strong>
  <%= @blog.like %>
</p>

<p>
  <strong>Dislike:</strong>
  <%= @blog.dislike %>
</p>

<h2>Comments</h2>
<% @blog.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.name%>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.comment%>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.email%>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.like%>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.dislike%>
  </p>

  <p>
  <%= link_to 'Destroy Comment', [comment.blog, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
</p>
<% end %>

<%= form_for ([@blog, @blog.comments.build])  do |f|%>
<% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="field">
    <%= f.label :like %><br>
    <%= f.number_field :like %>
  </div>
  <div class="field">
    <%= f.label :dislike %><br>
    <%= f.number_field :dislike %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Edit', edit_blog_path(@blog) %> |
