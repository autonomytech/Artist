<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Painting Category</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Dashboard', dashboard_index_path %>
      </li>
      <li class="active">
        <strong>Painting Category</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Listing Painting Categories</h5>
        </div>
        <div class="ibox-content">
          <div class="">
            <%= link_to 'New Painting Category', new_painting_category_path, class: 'btn btn-primary' %>
          </div>
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Created At</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @painting_categories.each do |painting_category| %>
              <tr class="gradeA">
                <td><%= painting_category.name %></td>
                <td><%= painting_category.created_at.to_date %></td>
                <td class="center"><%= link_to edit_painting_category_path(painting_category) do %><i class="fa fa-pencil fa-lg"></i><%end%>&nbsp;&nbsp;<%= link_to painting_category, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fa fa-trash fa-lg"></i><%end%></td>
              </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
