<div class="section section-breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Listing Painting Categories</h1>
      </div>
    </div>
  </div>
</div>
<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-sm-10">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Code</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @painting_categories.each do |painting_category| %>
            <tr>
              <td><%= painting_category.name %></td>
              <td><%= painting_category.code %></td>
              <td><%= link_to 'Show', painting_category %>&nbsp;&nbsp;<%= link_to 'Edit', edit_painting_category_path(painting_category) %>&nbsp;&nbsp;<%= link_to 'Destroy', painting_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Painting category', new_painting_category_path %>
      </div>
    </div>
  </div>
</div>
