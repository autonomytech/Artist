<%= bootstrap_form_for(@painting) do |f| %>
<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-md-5">
        <%= f.text_field :title, placeholder: 'Title' %>
        <%= f.select :profile_id, @paintings_category_profile[0], prompt: true %>
        <%= f.select :painting_category_id, @paintings_category_profile[1], prompt: true %>
        <%= f.text_field :ref_no, disabled: :disabled %>
        <%= f.text_field :size, placeholder: 'Size' %>
        <%= f.text_field :style, placeholder: 'Style' %>
        <%= f.text_area :details, placeholder: 'Details' %>
        <%= f.text_field :medium, placeholder: 'Medium' %>
        <%= f.select :status, t('status'), prompt: true %>
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
      <div class="col-md-6">
        <h4>Preview image</h4>
        <div class="img-crop">
          <%= image_tag (@painting.image? ? @painting.image : '') %>
        </div><br/>
        <div class="btn-group">
          <label title="Upload image file" for="inputImage" class="btn btn-info">
            <%= f.file_field :image, class: 'input_image', label: 'Upload new image'%>
          </label>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
