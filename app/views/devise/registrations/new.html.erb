 <div class="middle-box text-center loginscreen   animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name">IN+</h1>
    </div>
    <h3>Register to IN+</h3>
    <p>Create account to see it in action.</p>
    <div style="text-align:left">
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name),html:{class: "m-t"}) do |f| %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation' %>
    <%= f.submit "Register", class: "btn btn-primary block full-width m-b"%>
    <% end %>
    </div>
    <p class="text-muted text-center">
      <small>Already have an account?</small>
    </p>
    <%= render "devise/shared/links" %>
    <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
  </div>
</div>

